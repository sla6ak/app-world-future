{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "pages/index.styled.js",
        "pages/worldFuture/auth/validation.js",
        "pages/_document.js",
        "utilits/toast/castomToast.js",
        "utilits/toast.js",
        "pages/_app.jsx"
    ],
    "exclude": ["node_modules"]
}
